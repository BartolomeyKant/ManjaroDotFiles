[bar/top]
inherit = bar/def_bar

; Position of the system tray window
tray-position = none
; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
; Tray icon max size
tray-maxsize = 16
tray-background = ${colors.background}

modules-left =  transparent_spacer end_left void_spacer date void_spacer  i3  void_spacer title end_left_reverse
modules-center =
modules-right = end_right_reverse keyboard void_spacer light audio void_spacer wifi eth cpu memory temperature  battery void_spacer powermenu void_spacer end_right transparent_spacer
