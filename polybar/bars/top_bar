[bar/top]
inherit = bar/def_bar

; Position of the system tray window
tray-position = right
; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
; Tray icon max size
tray-maxsize = 16
tray-background = ${colors.background}

modules-left = void_spacer date void_spacer i3 void_spacer end_right
modules-center = end_left void_spacer music  void_spacer end_right
modules-right = end_left void_spacer keyboard  void_spacer audio void_spacer battery void_spacer powermenu void_spacer
