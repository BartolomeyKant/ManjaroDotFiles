ws-icon-2 = 3: ;III
ws-icon-3 = 4: ;IV
ws-icon-4 = 5: ;V
ws-icon-5 = 6: ;VI
ws-icon-6 = 7: ;VII
ws-icon-7 = 8: ;VIII
ws-icon-8 = 9: ;IX
ws-icon-9 = 10: ;X

ws-icon-default = --

padding = 1

label-mode = %mode%
