[module/i3]
type = internal/i3
format = <label-state><label-mode>
format-background = ${colors.background}
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

strip-wsnumbers = true

; set $ws1 "1: "
; set $ws2 "2: "
; set $ws3 "3: "
; set $ws4 "4: "
; set $ws5 "5: "
; set $ws6 "6: "
; set $ws7 "7: "
; set $ws8 "8: "
; set $ws9 "9: "
; set $ws10 "10: "

ws-icon-0 = 1: ;I
