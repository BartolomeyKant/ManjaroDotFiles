[module/title]
type = internal/xwindow

; Available tags:
;   <label> (default)
format = [<label>]
format-background = ${colors.background}
format-foreground = ${colors.foreground}

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 80

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = ${colors.foreground-alt}